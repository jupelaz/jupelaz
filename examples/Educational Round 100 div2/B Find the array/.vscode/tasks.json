{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Node JS Problem solving",
      "type": "shell",
      "command": "node",
      "args": [
        "script.js",
        "<",
        "input.txt",
        ">",
        "output.txt"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}